<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GetHealthy"
             x:Class="GetHealthy.MainPage">

    <!-- Dividing space into a 9*6 Grid -->
    <Grid BackgroundColor="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="1.1*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image x:Name="imageLogo" Source="logo.png" Aspect="Fill"
               Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="4" >
        </Image>

        <!-- Button to click -->
        <Button x:Name="btnHome" BackgroundColor="Cyan" 
                BorderColor="Black"
                Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                Text="Home">
        </Button>
        <Button x:Name="btnConverter" BackgroundColor="LightBlue"
                BorderColor="Black"
                Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                Text="Calorie Converter" Clicked="BtnConverterClicked" 
                NavigationPage.HasNavigationBar="True">
        </Button>
        <Button x:Name="btnFoodDiary" BackgroundColor="LightBlue"
                BorderColor="Black"
                Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                Text="Food Diary" Clicked="BtnFoodDiaryClicked" 
                NavigationPage.HasNavigationBar="True">
        </Button>
        <Button x:Name="btnWeight" BackgroundColor="LightBlue"
                BorderColor="Black"
                Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2"
                Text="Enter Weight" Clicked="BtnWeightClicked" 
                NavigationPage.HasNavigationBar="True">
        </Button>
        <Button x:Name="btnCamera" BackgroundColor="LightBlue"
                BorderColor="Black"
                Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="6"
                Text="Upload Photo" Clicked="BtnCameraClicked" 
                NavigationPage.HasNavigationBar="True">
        </Button>
        

        <Label x:Name="lblAbout"
                Grid.Row="3" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="6"
                VerticalTextAlignment="Center" HorizontalTextAlignment="Start"
                Margin="10" FontSize="Medium">
        </Label>

        <Label x:Name="lblContact" Text="Contact Information:"
                Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="6"
                VerticalTextAlignment="Center" HorizontalTextAlignment="Start"
                Margin="10">
        </Label>

        <Label Text="&#128222; 0800 GET HEALTHY"
                Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="6"
                VerticalTextAlignment="Center" HorizontalTextAlignment="Start"
                Margin="10">
        </Label>

        <Label Text="&#9993; info@gethealthy.com"
                Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="6"
                VerticalTextAlignment="Center" HorizontalTextAlignment="Start"
                Margin="10" FontSize="Medium">
        </Label>

        <Label Text="&#x00A9; GetHealthy 2017"
                Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="6"
                VerticalTextAlignment="Center" HorizontalTextAlignment="Center">
        </Label>
    </Grid>
</ContentPage>